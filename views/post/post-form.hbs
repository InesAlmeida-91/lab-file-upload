<h2>Create a Post</h2>

<form action="/post/create" method="post" enctype="multipart/form-data"> 
    <div>
        <label>creatorId:
          <input type="text" name="creatorId" />
        </label>
      </div>
 
      <div>
        <label>Content:
          <textarea name="content" cols="30" rows="4"> </textarea>
        </label>
      </div>
 
      <div>
        <label>Image:
            <input type="file" name="post-image" />
        </label>
      </div>

       <div>
        <label>Image Name:
          <input type="text" name="picName"/>
        </label>
      </div>
 
      <button type="submit">Create</button>
    </form>
  
